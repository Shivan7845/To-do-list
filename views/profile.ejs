<%- include("partials/header") %>
<%- include("partials/nav") %>
<div class="container bg-light p-5 mt-5">
  <h1>User profile page</h1>
 <a class="btn btn-primary" href="/add">Add-task</a>
 <hr>
 <h1 class="text-center">List of all user task.</h1>
 <ul class="list-group">
  <% tasks.forEach(function(task){ %>
    <li class="list-group-item mb-3">
      <span class="d-flex justify-content-between">
        <span><%= task.task_no %></span>
        <span><%= task.date %></span>
      </span>
      <hr>
      <span class="d-flex justify-content-between">
        <%= task.work %>
        <span>
          <a class="text-decoration-none" href="/update/<%= task._id %>">✏️</a>
          <a class="text-decoration-none" href="/delete/<%= task._id %>">❌</a>
        </span>
      </span>
    </li>
 <% }) %>
 </ul>
</div>
<%- include("partials/footer") %>